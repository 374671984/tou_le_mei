<!--pages/onlinelogin/onlinelogin.wxml-->
<view class="container"> 
  <image class="login-img" src="https://6d79-my-test-5gsknxhh42d2909f-1314291073.tcb.qcloud.la/background/online_login.jpg?sign=6a6151574ae6d9aa4a525b02c78905b7&t=1665472264"></image> 
  <view class="login-from"> 
    <!--账号-->
    <view class="inputView"> 
      <label class="loginLab">账号</label> 
      <input class="inputText" placeholder="请输入账号" bindinput="getID" /> 
    </view> 
    <view class="line"></view> 
      <!--密码-->
      <view class="inputView"> 
        <label class="loginLab">密码</label> 
        <input class="inputText" password="true" placeholder="请输入密码" bindinput="getPassword" /> 
      </view> 
      <!--按钮-->
      <view class="loginBtnView"> 
        <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="sign">登录</button> 
      </view> 
    </view> 
</view>


.qipan ul{
  width: 420rpx;
  height: 420rpx;
  display: grid;
  grid-template-columns: 33.33% 33.33% 33.33%; /** 宽度为33%的单元格 */
  grid-template-rows: 33.33% 33.33% 33.33%; /** 设置高度为33% */
  grid-auto-rows: 100rpx;/** 当容易高度不够时，多余的组件高度将怎么分配，默认的高度由单元格内容决定 */
  grid-gap: 0%; /** 水平和垂直间距为0*/
  justify-content: center;/** 水平居中  */
  /* margin-top: 10rpx; */
  /* top: 300rpx; */
}

